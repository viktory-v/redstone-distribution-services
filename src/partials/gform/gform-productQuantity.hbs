{{! Garvity forms Quantity Field component https://docs.gravityforms.com/quantity-field/ https://docs.gravityforms.com/validation-errors/ }}

<li
        id="field_{{gFormIndex}}_{{gFormFieldIndex true}}"
        class="gfield {{gformFieldErrorClass showError}} {{gformAddCustomClass customClass}} {{gformProductHidden
                fieldType}} {{gformRequiredClass
                required}} gfield_price gfield_price_{{gFormIndex}}_{{gFormFieldIndex}} gfield_quantity gfield_quantity_{{gFormIndex}}_{{gFormFieldIndex}} field_sublabel_below field_description_below gfield_visibility_visible"> {{! what does this mean -> http://prntscr.com/i3v7gm https://prnt.sc/i2p29u http://prntscr.com/i3w204 http://prntscr.com/i3v3j4 }}
  {{#ifequal fieldType 3}}
    <input
            name="input_{{gFormFieldIndex}}"
            id="input_{{gFormIndex}}_{{gFormFieldIndex}}"
            type="hidden"
            class="gform_hidden"
            aria-invalid="false"
            value=""
    >
  {{else}}
    <label class="gfield_label" for="input_{{gFormIndex}}_{{gFormFieldIndex}}">
      {{labelText}}{{#with required}}<span class="gfield_required">*</span>{{/with}}
    </label>
  {{/ifequal}}
  {{#ifequal fieldType 1}}
    <div class="ginput_container ginput_container_number">
      <input
              name="input_{{gFormFieldIndex}}"
              id="input_{{gFormIndex}}_{{gFormFieldIndex}}"
              type="number"
              step="any"
              min="{{min}}"
              max="{{max}}"
              value="{{defaultValue}}"
              class="{{fieldSize}}"
              placeholder="{{placeholderText}}"
              aria-required="{{gformIsRequired required}}"
              aria-invalid="false"
      > {{! what does it mean -> http://prntscr.com/i4050o http://prntscr.com/i3v8zj http://prntscr.com/i3w2uf }}
      {{#if min}}
        <div class="instruction ">
          {{#if max}} {{! min and max is set }}
            Please enter a value between <strong>{{min}}</strong> and <strong>{{max}}</strong>.
          {{else}} {{! only min is set }}
            Please enter a value greater than or equal to <strong>{{min}}</strong>.
          {{/if}}
        </div>
      {{else}}
        {{#if max}} {{! only max is set }}
          <div class="instruction ">Please enter a value less than or equal to <strong>{{max}}</strong>.</div>
        {{/if}}
      {{/if}}
    </div>
  {{/ifequal}}
  {{#ifequal fieldType 2}}
    <div class="ginput_container ginput_container_select">
      <select
              name="input_{{gFormFieldIndex}}"
              id="input_{{gFormIndex}}_{{gFormFieldIndex}}"
              class="medium gfield_select"
              aria-invalid="false"
      >
        <option value="First Choice">First Choice</option>
        <option value="Second Choice">Second Choice</option>
        <option value="Third Choice">Third Choice</option>
      </select>
    </div>
  {{/ifequal}}
  {{#if descriptionText}}
    <div class="gfield_description">{{descriptionText}}</div>
  {{/if}}
  {{#if showError}}
    <div class="gfield_description validation_message"> {{! what does it mean -> http://prntscr.com/i3y6bc }}
      {{#if customValidationText}}
        {{customValidationText}}
      {{else}}
        This field is required.
      {{/if}}
    </div>
  {{/if}}
</li>
