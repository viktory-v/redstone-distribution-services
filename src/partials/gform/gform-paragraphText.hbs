{{! Garvity forms Paragraph Text Field component https://docs.gravityforms.com/paragraph-text-field-2/ https://docs.gravityforms.com/validation-errors/ }}

<li class="gfield {{gformFieldErrorClass showError}} {{gformAddCustomClass customClass}} {{gformRequiredClass
        required}}  field_sublabel_below field_description_below {{gformHideLabel
        hideLabel}} gfield_visibility_visible"> {{! what does this mean -> http://prntscr.com/i3v7gm https://prnt.sc/i2p29u http://prntscr.com/i3w204 http://prntscr.com/i3v3j4 }}
  <label class="gfield_label" for="input_{{gFormIndex}}_{{gFormFieldIndex true}}">
    {{labelText}}{{#with required}}<span class="gfield_required">*</span>{{/with}}
  </label>
  <div class="ginput_container ginput_container_textarea">
		<textarea
            name="input_{{gFormFieldIndex}}"
            id="input_{{gFormIndex}}_{{gFormFieldIndex}}"
            class="textarea {{fieldSize}}"
            placeholder="{{placeholderText}}"
            aria-required="{{gformIsRequired required}}"
            aria-invalid="false"
            rows="10"
            cols="50"
    ></textarea>{{! what does it mean -> http://prntscr.com/i3v8zj http://prntscr.com/i3w2uf http://prntscr.com/i3vai5 }}
    {{#with maxChar}}
      <div class="charleft ginput_counter warningTextareaInfo">1 of {{maxChar}} max characters</div>
    {{! what does it mean --> http://prntscr.com/idludt }}
    {{/with}}
  </div>
  {{#if descriptionText}}
    <div class="gfield_description">{{descriptionText}}</div>
  {{/if}}
  {{#if showError}}
    <div class="gfield_description validation_message"> {{! what does it mean -> http://prntscr.com/i3y6bc }}
      {{#if customValidationText}}
        {{customValidationText}}
      {{else}}
        This field is required.
      {{/if}}
    </div>
  {{/if}}
</li>
