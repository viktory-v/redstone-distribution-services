@import '../global-mixins.pcss';

section.error404,
.search-section,
.default-page.text-content,
.archive-section {
  margin-top: 50px;
  padding-bottom: 40px;

  .inner {
    max-width: 1220px;
  }

  .section-title {
    padding-bottom: 20px;
    margin-top: 100px;
    font-family: Krub;
    font-style: normal;
    font-weight: bold;
    font-size: 40px;
    line-height: 54px;
    color: #404554;
  }

  .title {
    margin-top: 100px;
  }

  /* a {
    font-family: Noto Sans TC;
    font-style: normal;
    font-weight: normal;
    font-size: 18px;
    line-height: 24px;
    color: #404554;
  } */

  .sidebar .archive-list-block {
    margin-bottom: 30px;
  }

  .sidebar .archive-list-block,
  .categories {
    a {
      font-family: Noto Sans TC;
      font-style: normal;
      font-weight: normal;
      font-size: 18px;
      line-height: 24px;
      color: #404554;
    }
  }

  .categories {
    margin-top: 20px;
    margin-bottom: 5px;
  }
}

section.error404 .searchform,
.search-section .searchform,
.archive-section {
  label {
    display: block;
    margin-bottom: 8px;
  }

  #s {
    display: inline-block;
    vertical-align: middle;
    width: calc(100% - 105px);
    max-width: 450px;
    height: 40px;
    min-height: 40px;
    padding: 0 13px;
    border: 1px solid #ccc;
  }

  #searchsubmit {
    color: #fff;
    width: 100px;
    font-size: 16px;
    font-weight: 400;
    padding: 10px 0;
    display: inline-block;
    outline: none;
    cursor: pointer;
    background-color: #c71e03;
    vertical-align: middle;
    margin-bottom: 0;
    border: none;
  }
}

.search .content,
.search-section .content {
  .item {
    padding: 10px;
    border: 1px dashed #ddd;
    margin-bottom: 30px;
    background-color: #fff;

    &::after {
      content: '';
      display: table;
      clear: both;
    }
  }

  .categories {
    margin-bottom: 5px;

    a {
      font-size: 14px;
      font-weight: 400;
      line-height: 26px;
      display: inline-block;
      vertical-align: top;
      padding: 0 10px;
      border: 1px solid #e9e9e9;
      margin-right: 6px;
      margin-bottom: 10px;
      font-family: Noto Sans TC;
      font-style: normal;
      color: #404554;

      &:last-child {
        margin-right: 0;
      }
    }
  }

  .posted {
    color: #404554;
    font-size: 14px;
    font-weight: 400;
    line-height: 26px;
    margin-bottom: 13px;
    font-family: Noto Sans TC;
  }

  .text {
    display: inline-block;
  }

  .thumbnail {
    text-align: center;
    margin-bottom: 20px;
    height: 64vw;
    width: 100%;
    background-size: cover;
    background-position: center 0;

    &[style*='background-image: url()'],
    &[style*='background-image: url("")'] {
      display: none !important;
    }
  }

  .item-content {
    color: #404554;
    font-size: 16px;
    font-weight: 400;
    line-height: 26px;
    margin-bottom: 12px;
    margin-top: 15px;
  }

  .title {
    color: #404554;
    font-size: 16px;
    font-weight: 700;
    line-height: 30px;
    margin-bottom: 5px;
    font-family: Krub;

    a {
      color: #404554;
    }
  }

  .more {
    background-color: #c71e03;
    text-align: center;
    padding: 3.5px 13.5px;
    vertical-align: middle;
    color: #fff !important;
    font-size: 11px;
    font-weight: 400;
    text-transform: uppercase;
    outline: none;
    transition: background-color 0.2s;
    width: 130px;
    display: block;
    margin-top: 20px;
    clear: both;
    border-radius: 3px;
  }
}

.new_search {
  margin-top: 30px;
}

.menu-site_map {
  .sub-menu {
    margin-top: 10px;
    padding-left: 0;
    margin-bottom: 0;
  }

  li {
    margin-bottom: 10px;
  }
}

@media (--sm) {
  .search .content {
    .thumbnail {
      max-width: 200px;
      text-align: left;
      float: left;
      margin-bottom: 0;
      margin-right: 30px;
      height: 125px;

      a {
        margin-right: 30px;
        margin-bottom: 10px;
        display: block;
      }
    }
  }
}

@media (--lg) {
  .search .content {
    .item {
      padding-top: 20px;
      padding-left: 20px;
      padding-right: 20px;
    }

    .thumbnail {
      max-width: 220px;
    }
  }

  section.error404,
  .search-section,
  .default-page.text-content {
    padding-top: 80px;
    padding-bottom: 60px;
  }
}

.error404,
.default-page,
.search,
.search-results,
.archive-section,
.new_search {
  padding-bottom: 80px;

  .section-title {
    color: #000;
    font-size: 60px;
    font-weight: 700;
    margin-bottom: 30px;
    line-height: 70px;
  }

  label {
    margin-bottom: 8px;
  }

  .search-field {
    display: inline-block;
    vertical-align: middle;
    width: calc(100% - 105px);
    max-width: 450px;
    height: 40px;
    min-height: 40px;
    padding: 0 13px;
    border: 1px solid #d6e4ed;
    border-radius: 3px;
    min-width: 160px;
    margin-top: 10px;
    margin-bottom: 10px;
    font-family: Noto Sans TC;
    font-style: normal;
    font-weight: normal;
    font-size: 18px;
    outline: none;
  }

  p {
    font-family: Krub;
    font-style: normal;
    font-weight: normal;
    font-size: 18px;
    line-height: 26px;
    color: #000;
    padding-bottom: 50px;
  }

  ul {
    list-style-type: none;
  }

  .page-numbers {
    display: flex;
    width: 100%;
    justify-content: center;
    list-style-type: none;

    li {
      padding: 0 15px;
    }
  }

  .search-submit,
  .search .content .more {
    color: #fff;
    width: 100px;
    font-size: 16px;
    font-weight: 400;
    padding: 11px 0;
    display: inline-block;
    outline: none;
    cursor: pointer;
    background-color: #e91716;
    vertical-align: middle;
    margin-bottom: 0;
    border: none;
    font-style: normal;
    border-radius: 3px;
    font-family: Noto Sans TC;

    &:hover {
      background-color: #0ca8e7;
      text-decoration: none;
    }
  }

  .screen-reader-text {
    font-family: Krub;
    font-style: normal;
    font-weight: 400;
    font-size: 18px;
    line-height: 26px;
    color: #000;
  }

  .item {
    .item-content {
      a,
      .more {
        color: #c71e03;
      }
    }
  }

  .pagination {
    overflow: hidden;
  }

  .text-content {
    ul {
      li {
        a {
          color: #c71e03;
        }

        &::before {
          background-color: #c71e03;
        }
      }
    }
  }

  .page-numbers {
    li {
      a {
        color: #b5bdd3 !important;
      }
    }
  }

  .item-footer {
    .back-link {
      color: #c71e03;
    }
  }
}
